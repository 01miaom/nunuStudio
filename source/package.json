{
	"name": "nunuStudio",
	"description": "nunuStudio is a web based game engine for 3D and 2D game development with support for VR and AR",
	"main": "editor.html",
	"chromium-args": "--ignore-gpu-blacklist --disable-raf-throttling --enable-gpu-async-worker-context",
	"window": {
		"icon": "files/icon.png",
		"frame": true,
		"width": 1280,
		"height": 720,
		"min_width": 800,
		"min_height": 600
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tentone/nunuStudio.git"
	},
	"keywords": [
		"three.js",
		"editor",
		"webgl",
		"engine",
		"gamedev",
		"cannonjs"
	],
	"author": "Tentone",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/tentone/nunuStudio/issues"
	},
	"homepage": "https://www.nunustudio.org",
	"dependencies": {
		"cordova": ""
	},
	"build": {
		"appId": "io.tentone.nunustudio",
		"nwVersion": "0.34.2",
		"nwFlavor": "sdk",
		"output": "../../build/desktop/",
		"packed": true,
		"targets": ["zip","nsis7z"],
		"strippedProperties":["build"],
		"outputPattern": "${NAME}_${PLATFORM}_${ARCH}",
		"win": {
			"productName": "nunuStudio",
			"companyName": "tentone",
			"copyright": "MIT",
			"icon": "./files/icon.ico"
		},
		"mac": {
			"name": "nunuStudio",
			"displayName": "nunuStudio",
			"companyName": "tentone",
			"copyright": "MIT",
			"icon": "./files/icon.ico"
		},
		"nsis": {
			"installDirectory": "$PROGRAMFILES\\${_COMPANYNAME}\\${_APPNAME}",
			"diffUpdaters": false
		}
	}
}
